<%= form_for(@campaign) do |f| %>

  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h4>
      <ul>
        <% @campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :template_id %>

  <div class="form-group">
    <%= f.label :list_id %>
    <%= f.select(:list_id, lists.map { |f| [f["name"], f["id"]] }, :prompt => "Select target list") %>
  </div>

  <div class="form-group">
    <%= f.label :subject_line %>
    <%= f.text_field :subject_line %>
  </div>
    
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
    
  <div class="form-group">
    <%= f.label :from_name %>
    <%= f.text_field :from_name %>
  </div>
    
  <div class="form-group">
    <%= f.label :reply_to %>
    <%= f.text_field :reply_to, :placeholder => 'Email address' %>
  </div>
    
  <%= f.submit class: "btn btn-primary" %>

<% end %>
